<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/topicsImageView"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:adjustViewBounds="true"
            android:background="@color/divider"
            />

        <Button
            android:layout_marginLeft="3dp"
            android:id="@+id/subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/topicsImageView"
            android:padding="2sp"
            android:text="Subscribe"

            android:textColor="@color/colorAccent"
            android:textSize="8sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
        <Button
            android:layout_marginLeft="3dp"
            android:id="@+id/unsubscribe"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/topicsImageView"
            android:padding="2sp"
            android:text="Unsubscribe"

            android:textColor="@color/colorAccent"
            android:textSize="8sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignBottom="@id/topicsImageView"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:textColor="#ffffff"
            android:text="Title" />




        <LinearLayout
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/documentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sample"
                android:textSize="20sp"
                android:padding="20dp"
                />



            <TextView
                android:id="@+id/docDescription"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/documentName"
                android:textColor="@color/primary_text"
                android:padding="8dp"
                android:text="Description" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
